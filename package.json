{
  "private": true,
  "scripts": {
    "flow": "flow",
    "eslint": "eslint . --ext .js --ignore-pattern node_modules",
    "eslint-fix": "npm run eslint -- --fix",
    "install-all": "npm-recursive-install"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.63.1",
    "prettier": "^1.10.2",
    "recursive-install": "^1.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": ["prettier", "flowtype", "import"],
    "extends": [
      "plugin:flowtype/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        2,
        {
          "singleQuote": true,
          "trailingComma": "all",
          "semi": false,
          "bracketSpacing": true
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": ["api-types"]
        }
      ],
      "import/no-named-as-default": 0,
      "import/no-named-as-default-member": 0,
      "no-unused-vars": 2,
      "react/display-name": 0,
      "react/prop-types": 0
    }
  },
  "payload": {
    "scripts": ["cd frontend && npm install && npm run build"],
    "files": ["frontend/build/index.html", "frontend/build/service-worker.js"]
  }
}
